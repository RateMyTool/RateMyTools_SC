generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}


enum Role {
  USER
  ADMIN
}


model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(USER)
}


enum Condition {
  excellent
  good
  fair
  poor
}


model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}


model Review {
  id           Int      @id @default(autoincrement())
  school       String
  tool         String
  subject      String?
  courseNumber String?
  rating       Int
  tags         String[]
  reviewText   String   @map("review")
  userEmail    String?
  createdAt    DateTime @default(now())
}
