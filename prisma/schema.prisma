generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Use DATABASE_URL for local development and to avoid picking up masked Vercel vars.
  // If deploying to Vercel, ensure POSTGRES_PRISMA_URL is set in the environment.
  url = env("DATABASE_URL")
  // directUrl can be used for a non-pooling direct connection; fall back to DATABASE_URL
  directUrl = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

enum Condition {
  excellent
  good
  fair
  poor
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Review {
  id           Int      @id @default(autoincrement())
  school       String
  tool         String
  subject      String?
  courseNumber String?
  rating       Int
  tags         String[]
  reviewText   String   @map("review")
  createdAt    DateTime @default(now())
}
