generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Review {
  id           Int      @id @default(autoincrement())
  schoolId     Int
  toolId       Int
  rating       Int      @db.SmallInt
  comment      String?
  tags         String[]
  subject      String?
  courseNumber String?
  review       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  School       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  Tool         Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
}

model School {
  id         Int          @id @default(autoincrement())
  name       String
  domain     String?      @unique
  location   String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime
  Review     Review[]
  SchoolTool SchoolTool[]
}

model SchoolTool {
  schoolId  Int
  toolId    Int
  createdAt DateTime @default(now())
  School    School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  Tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@id([schoolId, toolId])
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Tool {
  id         Int          @id @default(autoincrement())
  name       String
  category   String?
  logo_url   String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime
  Review     Review[]
  SchoolTool SchoolTool[]
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(USER)
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum Role {
  USER
  ADMIN
}
